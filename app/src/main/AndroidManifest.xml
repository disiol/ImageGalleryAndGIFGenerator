<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.denisimusIT.imageGalleryAndGIFGenerator">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".model.api.client.ClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreen"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".screean.ExitActivity"
            android:theme="@style/Dialog" />
        <activity android:name=".screean.image.viewAddedImages.BigPicherActivity" />
        <activity
            android:name=".screean.image.viewAddedImages.PicturesList"
            android:theme="@style/ActionBar" />
        <activity android:name=".screean.authorization.signUp.RegisterActivity" />
        <activity
            android:name=".screean.image.addNewImage.UploadNewPicture"
            android:theme="@style/ActionBar" />
        <activity android:name=".screean.authorization.signIn.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>